<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/srv_dev_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/srv_dev_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/srv_dev_name" />

    <ExpandableListView
        android:id="@+id/list_services"
        style="@android:style/Widget.ExpandableListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/srv_dev_uuid"
        android:childDivider="#e1f5fe"
        android:divider="#e1f5fe"
        android:dividerHeight="5dp"
        android:focusable="false"
        android:groupIndicator="@null"
        android:footerDividersEnabled="false"
        android:listSelector="#b9f6ca" />

</RelativeLayout>
